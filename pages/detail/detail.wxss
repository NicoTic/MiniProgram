/* pages/detail/detail.wxss */
.containar{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 10px;
  font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol;
}

.article_title_container{
  width: 100%;
  font-size: 18px;
  margin-bottom: 40px;
  display: flex;
  flex-direction: column;
}

.article_title_text{
  font-size: 20px;
  line-height: 1.25;
  font-weight: 500;
  opacity: 0.8;
  margin-bottom: 15px;
}

.article_title_bottom{
  font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol;
  font-size: 12px;
  line-height: 1.25;
  font-weight: 300;
  opacity: 0.5;
  display: flex;
  justify-content: space-between;
}

.article_title_left{
  display: flex;
}

.article_source{
  margin-right: 15px;
}

.article_title_right{
  margin-right: 5px;
}

.article_content_container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  line-height: 1.4;
}

.article_content_text{
  width: 100%;
  display: flex;
  flex-direction: column;
}

view image{
  width: 100%;
  margin-bottom: 10px;
}

.article_content_detail{
  opacity: 0.8;
  display: flex;
  margin-bottom: 10px;
}
